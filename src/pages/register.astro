---
import BaseLayout from "../layouts/Layout.astro";
import RegisterForm from "../components/RegisterForm.jsx";
---

<BaseLayout title="Registro">
  <div class="max-w-md mx-auto mt-24 p-6 bg-white rounded-lg shadow">
    <h2 class="text-2xl font-bold mb-4">Crear cuenta</h2>
    <RegisterForm client:load />
    <p class="mt-4 text-center">
      ¿Ya tienes cuenta?
      <a href="/login" class="text-blue-600 hover:underline">Iniciar sesión</a>
    </p>
  </div>
</BaseLayout>

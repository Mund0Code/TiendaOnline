---
import BaseLayout from "../layouts/Layout.astro";
import Stripe from "stripe";

// Usa tu cliente anon para Stripe
import { supabase } from "../lib/supabaseClient";
// Y el cliente admin para orders
import { supabaseAdmin } from "../lib/supabaseAdminClient";

import InvoiceButton from "../components/InvoiceButton.jsx";

const stripe = new Stripe(import.meta.env.STRIPE_SECRET_KEY, {
  apiVersion: "2025-05-28.basil",
});

const sessionId = Astro.url.searchParams.get("session_id");

if (!sessionId) {
  return Astro.redirect("/");
}

// 1) Recupera la sesi√≥n de Stripe
let session = null;
let stripeError = null;
try {
  session = await stripe.checkout.sessions.retrieve(sessionId, {
    expand: ["line_items.data.price.product", "customer"],
  });
} catch (err) {
  console.error("Error fetching Stripe session:", err);
  stripeError = err;
}

console.log("üì¶ Buscando orden con session_id:", sessionId);

// 2) Con el cliente ADMIN ignoramos RLS - obtener m√°s detalles
const { data: dbOrder, error: dbError } = await supabaseAdmin
  .from("orders")
  .select(
    `
    id, 
    amount_total, 
    invoice_url, 
    checkout_session_id,
    created_at,
    user_id,
    profiles!inner(email, full_name)
  `
  )
  .eq("checkout_session_id", sessionId)
  .maybeSingle();

if (dbError) {
  console.error("‚ùå Error fetch success page:", dbError);
} else if (!dbOrder) {
  console.warn("‚ö†Ô∏è Pedido no encontrado con session_id:", sessionId);
} else {
  console.log("‚úÖ Pedido encontrado:", dbOrder);
}

// 3) Obtener detalles de los productos comprados
let orderItems = [];
if (dbOrder) {
  const { data: items } = await supabaseAdmin
    .from("order_items")
    .select(
      `
      quantity,
      price,
      products!inner(
        id,
        name,
        description,
        image_url,
        category:categories(name)
      )
    `
    )
    .eq("order_id", dbOrder.id);

  orderItems = items || [];
}

// 4) Construye el nombre del producto y detalles
let productDetails = [];
let totalItems = 0;

if (session?.line_items?.data) {
  productDetails = session.line_items.data.map((li) => {
    const prod = (li.price as any).product as Stripe.Product;
    totalItems += li.quantity || 1;
    return {
      name: prod?.name ?? li.description ?? "Art√≠culo",
      quantity: li.quantity || 1,
      amount: li.amount_total,
      price: (li.price as any)?.unit_amount,
    };
  });
}

// 5) Informaci√≥n para mostrar
const customerEmail =
  session?.customer_details?.email ||
  session?.customer?.email ||
  dbOrder?.profiles?.email;
const customerName =
  session?.customer_details?.name || dbOrder?.profiles?.full_name;
const orderDate = dbOrder?.created_at
  ? new Date(dbOrder.created_at)
  : new Date();
const orderId = dbOrder?.id?.substring(0, 8) || sessionId.substring(0, 8);

// 6) Pr√≥ximos pasos recomendados
const nextSteps = [
  {
    icon: "üìß",
    title: "Revisa tu email",
    description: "Te hemos enviado un recibo de compra con todos los detalles.",
  },
  {
    icon: "üìÅ",
    title: "Accede a tu cuenta",
    description: "Encuentra todos tus productos en tu dashboard personal.",
  },
  {
    icon: "üìÑ",
    title: "Descarga tu factura",
    description: "Guarda el comprobante para tus registros contables.",
  },
  {
    icon: "üí¨",
    title: "¬øNecesitas ayuda?",
    description: "Nuestro equipo de soporte est√° disponible 24/7.",
  },
];
---

